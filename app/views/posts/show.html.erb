<div class="post-container">
  <div class="row mt-3 ">
    <div class="col">
      <img style="width: 100%" alt="Image of <%=@post.title%>" src="<%=@post.image%>"/>
    </div>
  </div>
  <div class="row ">
    <div class="col-sm-3 p-3 m-3">
      <h1><%= @post.title %></h1>
      <div class="row">
        <div class="col-4">
          <%= @post.date%>
        </div>
        <div class="col text-end">
          <em><%= @post.copyright? ? "Â© #{@post.copyright}" : "" %></em>
        </div>
      </div>
      <%if current_user%>
        <%if @post.likes.where(user_id: current_user.id).exists?%>
          <%= link_to 'Unlike', post_likes_path(@post), method: :post %>
        <%else%>
          <%= link_to 'Like', post_likes_path(@post), method: :post %>
        <%end%>
      <%else%>
        <small><%=link_to 'Log in', '/users/sign_in' %> to like photos!</small>
      <%end%>
      <%= pluralize(@post.likes.count, 'Like')%>
    </div>
    <div class="col p-3 m-3 ">
      <p><%= @post.description %></p>
    </div>
  </div>
</div>
