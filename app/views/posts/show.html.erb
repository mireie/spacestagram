<div class="post-container">
  <div class="row mt-3 ">
    <div class="col">
      <img style="width: 100%" alt="Image of <%=@post.title%>" src="<%=@post.image%>"/>
    </div>
  </div>
  <div class="row ">
    <div class="col-sm-3 p-3 m-3">
      <h1><%= @post.title %></h1>
      <p><%= button_to 'Like', post_likes_path(@post), method: :post %> | <%= pluralize(@post.likes.count, 'Like')%> </p>
      Copyright here
    </div>
    <div class="col p-3 m-3 ">
      <p><%= @post.description %></p>
    </div>
  </div>
</div>
