<div class="row mt-3">
  <div class="col main-content">
    <% if @posts.any? %>
      <div class="row">
      <h2>Posts from Space!</h2>
        <% @posts.each do |post| %>
          <%= render :partial => "layouts/post_card", :locals => {:post => post} %>
        <% end %>
      </div>
    <% else %>
      <p>There are no posts yet.</p>
    <% end %>
  </div>
</div>